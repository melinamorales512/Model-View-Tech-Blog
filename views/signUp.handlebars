<div class="row flex-column justify-center">
    <div class="col-md-6 posts flex-column justify-center align-center">
        <h2>Signup</h2>
        <a href="/login" class="form-link">Already Registerd? Log In Here</a>
        <form class="form signup-form">
            <div class="form-group">
                <label for="name-signup">Username:</label>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group text-center">
                <p id="bad-login">Your password must be at least 8 characters long, please try again.</p>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>
